{
    "compilerOptions": {
        "module": "commonjs",
        "target": "ES5",
        "lib": ["es2015", "dom"],
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "outDir": "dist",
        "sourceMap": true,
        "strict": false
    },
    "compileOnSave": false,
    "include": ["src/**/*", "test/**/*"],
    "exclude": ["node_modules"]
}
